<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:textColor">@color/blueGrey</item>-->

        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="ButtonStyle.Blue" parent="ButtonStyle">
        <item name="android:background">@drawable/blue_round_rect</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle.Clear" parent="ButtonStyle">
        <item name="android:background">@drawable/clear_round_rect</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarStyle.White" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>
