    android:padding="@dimen/padding_normal">
    <TextView
        android:id="@+id/tvArabic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text=""
        android:textSize="@dimen/textsize_large"
