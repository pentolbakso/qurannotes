    <TextView
        android:id="@+id/tvTranslation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Translation"
        android:textSize="@dimen/textsize_normal"/>
</LinearLayout>